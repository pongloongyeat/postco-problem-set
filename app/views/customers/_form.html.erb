<%= form_with(model: customer, local: true) do |form| %>
  <% if customer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(customer.errors.count, "error") %> prohibited this customer from being saved:</h2>

      <ul>
        <% customer.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.label :full_name %>
    <%= form.text_field :full_name, class:"form-control", :required => true, :pattern => '^[a-zA-Z\s]*$' %>
  </div>

  <div class="field form-group">
    <%= form.label :"nric_num" %>
    <%= form.text_field :nric_num, class:"form-control", :required => true, :pattern => '^[0-9]{12}$' %>
  </div>

  <div class="field form-group">
    <%= form.label :temperature %>
    <%= form.text_field :temperature, class:"form-control", :required => true, :pattern => '^[0-9]{2}.[0-9]*$' %>
  </div>

  <div class="field form-group">
    <%= form.label "Branch location" %>
    <% if current_branch != nil %>
      <%= form.text_field :branch_id, class:"form-control", id: :customer_branch_id, :required => true, value:current_branch.id %>
    <% else %>
      <!-- If the customer is attempting to fill up the form then current_branch will be nil
      in which case the link provided should contain the location data so the customer doesn't
      need to manually pick the grocery branch that they are in. -->
      <% if params[:branch_id] %>
        <%= form.text_field :branch_id, class:"form-control", id: :customer_branch_id, :required => true, value: params[:branch_id] %>
      <% else %>
        <%= form.text_field :branch_id, class:"form-control", id: :customer_branch_id, :required => true, value: "1" %>
      <% end %>
    <% end %>
  </div>

  <div class="actions">
    <%= form.submit "Submit", class:"btn btn-primary" %>
  </div>
<% end %>
